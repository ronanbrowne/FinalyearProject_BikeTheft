<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ronan.bikepro.Fragments.Beacon_manager">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="60dp">

        <!-- horizontal heading layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="12dp"
                android:paddingTop="20dp"
                android:text="Beacon manager"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/infobeacon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:src="@drawable/ic_info_outline_black_24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginRight="16dp"
                android:paddingBottom="8dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/linkToBike"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_router_accent_48dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="Establish Link" />




            </LinearLayout>



            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:paddingBottom="8dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_search_accent_48dp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="3dip"
                    android:text="Search" />

            </LinearLayout>


        </LinearLayout>


        <!-- action result -->

        <LinearLayout
            android:id="@+id/resultarea"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:paddingBottom="16dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"

            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="12dp"
                android:text="Establishing connection" />


            <!-- Link established images -->
            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_phonelink_ring_blue_48dp" />

                <ImageView
                    android:id="@+id/link"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_bluetooth_connected_red_48dp" />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_motorcycle_blue_48dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingTop="12dp"
                    android:text="Status:  "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="No Connection." />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>
