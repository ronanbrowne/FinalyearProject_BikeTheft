<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ronan.bikepro.Fragments.EditFragment">

    <ScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="60dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Update bike details or report theft: "
                android:textStyle="bold" />

            <!-- Image upload layout -->
            <LinearLayout
                android:id="@+id/image_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_shadow"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="8dp"
                android:paddingRight="16dp">

                <TextView
                    style="@style/CategoryStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginLeft="14dp"
                    android:text="Image"
                    android:textColor="@color/bikeHeadings" />


                <ImageView
                    android:id="@+id/upload_image"
                    android:layout_width="240dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="16dp"
                    android:src="@drawable/uploadimage" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingUpload"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"

                    android:clickable="true"
                    app:backgroundTint="#B2EBF2"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_camera_enhance_black_24dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_shadow"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                android:layout_marginTop="16dp"
                android:paddingRight="16dp"
                android:paddingTop="20dp">

                <!-- Label -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="Bike Details"
                    android:textColor="@color/bikeHeadings"
                    android:textStyle="bold"

                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:orientation="vertical"
                    android:paddingTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Make: "
                            android:textStyle="bold" />

                        <!-- Make field -->
                        <EditText
                            android:id="@+id/edit_bike_make"
                            style="@style/EditorFieldStyle"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:inputType="textCapWords" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Model: "
                            android:textStyle="bold" />

                        <!-- Make field -->
                        <EditText
                            android:id="@+id/edit_bike_model"
                            style="@style/EditorFieldStyle"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:inputType="textCapWords" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Colour: "
                            android:textStyle="bold" />

                        <!-- Make field -->
                        <EditText
                            android:id="@+id/edit_bike_colour"
                            style="@style/EditorFieldStyle"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:inputType="textCapWords" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Frame Size: "
                            android:textStyle="bold" />

                        <!-- Make field -->
                        <EditText
                            android:id="@+id/edit_bike_size"
                            style="@style/EditorFieldStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:inputType="number" />


                        <ImageView
                            android:id="@+id/infoSize"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:src="@drawable/ic_info_outline_black_24dp" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Beacon ID: "
                            android:textStyle="bold" />

                        <!-- Make field -->
                        <EditText
                            android:id="@+id/edit_bike_UUID"
                            style="@style/EditorFieldStyle"
                            android:layout_width="0dp"
                            android:layout_weight="1" />


                        <ImageView
                            android:id="@+id/infoUUID"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:src="@drawable/ic_info_outline_black_24dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Other: "
                            android:textStyle="bold" />

                        <!-- Make field -->
                        <EditText
                            android:id="@+id/edit_othe_features"
                            style="@style/EditorFieldStyle"
                            android:layout_width="0dp"
                            android:layout_weight="2"
                            android:inputType="textCapWords" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>

            <!--stolen area layout-->
            <LinearLayout
                android:id="@+id/stolen_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_shadow"
                android:orientation="vertical"
                android:paddingBottom="24dp"
                android:paddingRight="16dp"
                android:paddingTop="20dp">

                <TextView
                    android:id="@+id/textView5"
                    style="@style/CategoryStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="14dp"
                    android:text="Bike has been Stolen"
                    android:textColor="@color/bikeHeadings"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp">


                    <ImageView
                        android:id="@+id/infoStolen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_info_outline_black_24dp" />

                    <CheckBox
                        android:id="@+id/bike_stolen"
                        style="@style/EditorFieldStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:checked="false"
                        android:text="Stolen" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/geoLocationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/lastSeen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Last Seen: "
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edit_last_seen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="60dp"
                        android:layout_weight="1" />


                    <!-- geo loaction seen field -->
                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/floatingGeoCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="16dp"
                        android:clickable="true"
                        app:backgroundTint="#B2EBF2"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/ic_add_location_black_24dp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">


                <RelativeLayout
                    android:id="@+id/rlRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">


                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/floatingConfirmEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="32dp"
                        android:clickable="true"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/ic_done_all_black_24dp" />

                    <android.support.design.widget.FloatingActionButton
                        android:id="@+id/floatingDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginEnd="28dp"
                        android:layout_marginRight="30dp"
                        android:layout_toLeftOf="@+id/floatingConfirmEdit"
                        android:layout_toStartOf="@+id/floatingConfirmEdit"
                        android:clickable="true"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/ic_delete_forever_black_24dp" />

                </RelativeLayout>


            </LinearLayout>

            <TextView
                style="@style/CategoryStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="16dp" />


        </LinearLayout>
    </ScrollView>
</FrameLayout>