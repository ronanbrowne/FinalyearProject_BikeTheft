<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    tools:context="com.example.ronan.bikepro.Fragments.BeaconConnect">


    <!--main linear layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="60dp">

        <!-- horizontal heading layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:padding="12dp"
                android:paddingTop="20dp"
                android:text="Beacon manager"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/infobeacon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:src="@drawable/ic_info_outline_black_24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/background_shadow"
            android:orientation="vertical"

            >

            <!-- Link established images -->
            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:padding="16dp">


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_phonelink_ring_blue_48dp" />

                <ImageView
                    android:id="@+id/link"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_bluetooth_connected_red_48dp" />


                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="16dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_motorcycle_blue_48dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:paddingBottom="16dp"
                    android:paddingLeft="22dp"
                    android:text="Status:  "
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="12dp"
                    android:text="No Connection." />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="40dp"
            android:paddingBottom="8dp"
            android:background="@drawable/background_shadow">

            <TextView
                android:id="@+id/chooseConnected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="16dp"
                android:text="Scanning for connection"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <ProgressBar
                android:layout_marginTop="50dp"
                android:id="@+id/loading_indicator"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_below="@+id/chooseConnected"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                />


            <TextView
                android:id="@+id/conectInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:text="Ensure you are beside your bike to establish connection." />


            <!--show one selected-->
            <LinearLayout
                android:id="@+id/selectedBike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/listViewChooseBike"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/bike_image"
                        android:layout_width="150dp"
                        android:layout_height="100dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Make: " />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Model: " />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="Colour: " />




                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/make"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textSize="16sp"
                            tools:text="Make" />

                        <TextView
                            android:id="@+id/model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:textSize="16sp"
                            tools:text="Model" />


                        <TextView
                            android:id="@+id/color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            tools:text="Colour" />

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:id="@+id/reportArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/selectedBike"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:padding="12dp"
                    android:gravity="right"
                    android:layout_marginRight="12dp"
                    android:paddingTop="20dp"
                    android:text="Report Stolen"
                    android:textStyle="bold" />


                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/floatingConfirmReport"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="31dp"
                    android:layout_marginBottom="16dp"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:srcCompat="@drawable/ic_record_voice_over_black_24dp" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</FrameLayout>
